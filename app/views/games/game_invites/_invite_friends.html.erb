<%= turbo_frame_tag "user_#{user.id}_friends" do %>
  <% friends.each do |friend| %>
    <% if friend.user == user %>

      <%= turbo_frame_tag "#{dom_id(user)}_friend_#{friend.whoSent.id}" do %>
        <% if friend.whoSent&.avatar&.attached? %>
            <%= link_to (image_tag friend.whoSent.avatar, class: "avatar"), "/id/#{friend.whoSent_id}"%>
          <% else %>
            <%= link_to (image_tag "guestavatar1.png", class: "avatar"), "/id/#{friend.whoSent_id}" %>
          <% end %>
        <%= friend.whoSent.username %>

        <%= form_with(model: GameInvite.new, url: :game_invites) do |form| %>
          <%= form.hidden_field :whoSent_id, value: user.id %>
          <%= form.hidden_field :whoGet_id, value: friend.whoSent.id %>
          <%= form.hidden_field :game_id, value: game.id %>
          <%= form.submit 'Invite' %>
        <% end %>
      <% end %>

    <% else %>

      <%= turbo_frame_tag "#{dom_id(user)}_friend_#{friend.user.id}" do %>
          <% if friend.user&.avatar&.attached? %>
            <%= link_to (image_tag friend.user.avatar, class: "avatar"), "/id/#{friend.user_id}"%>
          <% else %>
            <%= link_to (image_tag "guestavatar1.png", class: "avatar"), "/id/#{friend.user_id}" %>
          <% end %>

          <%= friend.user.username %>

        <%= form_with(model: GameInvite.new, url: :game_invites) do |form| %>
          <%= form.hidden_field :whoSent_id, value: user.id %>
          <%= form.hidden_field :whoGet_id, value: friend.user.id %>
          <%= form.hidden_field :game_id, value: game.id %>
          <%= form.submit 'Invite' %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
