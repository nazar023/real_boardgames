<%= turbo_stream_from 'games'%>
<div id = 'games_conatiner' class = 'flex flex-col p-6 px-8 lg:px-32 xl:px-40 2xl:px-52 '>
  <div class = 'mx-auto py-8' >
    Boardgames right now!
  </div>
  <div class = ' justify-between p-6 '>
    <p class = ' text-right' > <%= link_to "New game", new_game_path%> </p>
  </div>
  <div id = 'games-list' class = 'sm:columns-1 md:columns-2 lg:columns-2 max-w-auto gap-20 justify-center'>
    <%= render @games, user: current_user%>
  </div>
</div>

<div data-controller = 'little-fire-man'
     class = "ml-12 mb-12 w-20 fixed bottom-0 fire-hidden translate-y-32 "
     data-little-fire-man-target = 'anchor'
     data-action = "mouseover->little-fire-man#appear"
>
  <div class = "bg-black blink w-5 h-5 z-50 absolute rounded-3xl bottom-0">
    <%= image_tag "eye.jpg", class: "rounded-full h-4 w-4 aboslute m-auto p-auto bottom-0", data: { little_fire_man_target: "eye"} %>
  </div>
  <div class = "bg-black blink w-5 h-5 z-50 absolute rounded-3xl bottom-0 right-0">
    <%= image_tag "eye.jpg", class: "rounded-full h-4 w-4 aboslute m-auto p-auto bottom-0", data: { little_fire_man_target: "eye"} %>
  </div>
  <div class="red flame"></div>
  <div class="orange flame"></div>
  <div class="yellow flame"></div>
  <div class="white flame"></div>
</div>

