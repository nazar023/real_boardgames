<h1>Games</h1>

<div id="games">
  <% @games.each do |game| %>
  <article>
    <%= render game %>
    <p>
      <%= link_to "Show this game", game %>
    </p>
  </article>
  <% end %>
</div>
<div>
  <%= turbo_frame_tag "notifications" do %>
    <%= render "notifications/notifications", user: current_user, notifications: @notifications%>
  <% end %>
</div>

  <%= link_to "New game", new_game_path %>

