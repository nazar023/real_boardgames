<div id="<%= dom_id game %>" class = 'flex py-8 border-2 justify-between'>
  <div class = 'px-5 '>
      <p class = 'pb-2'>
      <% if game.winner_id.present?%>
        <h3> Finished </h3>
      <% end %>
      </p class = 'pb-2'>


      <p class = 'pb-2'>
        <%= link_to game.name, game, class: 'pb-2'%>
      </p class = 'pb-2'>

      <% if game.desc.present? %>
        <p class = 'pb-2'>
          <strong>Desc:</strong>
          <%= game.desc %>
        </p class = 'pb-2'>
      <% end %>


        <p class = 'pb-2'>
          <strong>Members:</strong>
          <span id = 'participants_counter'> <%= game.participants.count %></span>/<%= game.members %>
        </p class = 'pb-2'>
  </div>


  <div class = 'flex flex-row space-x-3 mr-4'>
    <%= render game.participants%>
    <% if !policy(game).finished? && (!current_user || !game.user_participants.include?(current_user.id))%>
    <div class = 'flex flex-col justify-center items-center'>
      <%= link_to((image_tag 'empty-spot.png', class: "Sirv image-main w-16 h-16", data: { controller: "hover", action: "mouseover->hover#mouseOver mouseout->hover#mouseOut" }), game)%>
      <%= %>
      Join?
    </div>
    <% end %>
  </div>
</div>


