<!DOCTYPE html>
<html>
  <head>
    <title>RealBoardgames</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%# <link rel="stylesheet", href="https://cdn.simplecss.org/simple.min.css" > %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= turbo_stream_from 'online_users', channel: OnlineChannel%>
    <nav class = "flex flex-initial bg-gradient-to-tl from-gray-500 to-yellow-400">
      <div class = 'flex flex-auto mx-auto max-w-7xl items-center justify-between p-6'>
        <%= link_to image_tag('yellowboardgamelogo.png', class: 'shrink-0 h-36 w-36'), games_path%>
        <%= render "layouts/session_manager", user: current_user%>
      </div>
    </nav>
    <%= turbo_frame_tag 'flash_messages' do %>
      <%= render "layouts/flash_messages", alert: alert, notice: notice %>
    <% end %>
    <%= yield %>
  </body>
</html>
