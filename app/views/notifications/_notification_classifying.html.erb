<%= turbo_frame_tag "#{dom_id(notification)}_notification" do %>
  <% if notification.subject_type == "Friendship" %>
    <%= render 'notifications/friendship_notification',
        friendship: notification.subject %>
  <% elsif notification.subject_type == "GameInvite" %>
    <%= render 'notifications/game_invite_notification',
        sender: notification.subject.sender,
        game: notification.subject.game,
        notification: notification.subject%>
  <% end %>
<% end %>
