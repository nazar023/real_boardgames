<%= turbo_frame_tag "#{dom_id(notification)}" do %>
  <% if notification.class == Friendship %>
    <%= render 'notifications/friendship_notification',
        friendship: notification %>
  <% elsif notification.class == GameInvite %>
    <%= render 'notifications/game_invite_notification',
        sender: notification.sender,
        game: notification.game,
        notification: notification%>
  <% end %>
<% end %>
