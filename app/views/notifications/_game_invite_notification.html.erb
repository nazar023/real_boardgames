<% if sender&.avatar&.attached? %>
  <%=link_to (image_tag (sender.avatar),
                     class: "avatar"),
                     "/id/#{sender.id}",
                     data: { turbo: :false } %>
<% else %>
  <%= link_to (image_tag "guestavatar1.png",
                           class: "avatar"),
                           "/id/#{sender.id}",
                           data: { turbo: :false }%>
<% end %>
<%= sender.username%> invited you to play

<%= link_to game.name, game, data: { turbo: :false }%>

<%= button_to "Accpet", accept_invite_path(notification.id), data: { turbo: :false }%>
<%= button_to "Decline", decline_invite_path(notification.id), method: :delete%>
