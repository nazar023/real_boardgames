<% if whoSent&.avatar&.attached? %>
  <%=link_to (image_tag (whoSent.avatar),
                     class: "avatar"),
                     "/id/#{whoSent.id}",
                     data: { turbo: :false } %>
<% else %>
  <%= link_to (image_tag "guestavatar1.png",
                           class: "avatar"),
                           "/id/#{whoSent.id}",
                           data: { turbo: :false }%>
<% end %>
