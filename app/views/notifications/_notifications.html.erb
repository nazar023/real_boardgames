<% if current_user && @user.notifications.present? %>
  <div>
    <%= turbo_stream_from "notifications_#{user.id}" %>
      <%= turbo_frame_tag "notifications_#{user.id}" do %>
        <h4> You got <%= current_user.notifications.count %> notifications! </h4>
        <% notifications.each do |notification| %>
          <%= render "notifications/notification_classifying", notification: notification, user: user%>
        <% end %>
      <% end %>
  </div>
<% end %>
