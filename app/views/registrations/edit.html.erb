<div class = ' mx-auto max-w-6xl items-center justify-between p-6 lg:px-8 bg-black bg-opacity-40'>
  <h2> Settings </h2>
  <%= form_with(model: @user, method: "patch" , url: edit_user_info_path(@user)) do |f| %>

    <div class="field">
      <strong> <%= f.label :avatar %></strong>
      <% if @user.avatar.present? %>
        <%= image_tag (@user.avatar),
                  style: "display: height: 150px;
                                    width:150px;" %>
      <% else %>
        <%= image_tag "guestavatar1.png",
                  style: "display: height: 150px;
                                    width:150px;" %>
      <% end %>
    <div>
      <%= f.file_field :avatar %>
    </div>
      <br/>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
    </div>
    <div class="field">
      <%= f.label :number %><br />
      <%= f.text_field :number, autofocus: true, autocomplete: "number" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <div>Unhappy? <%= button_to "Cancel my account", registration_path(@user) , data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

  <%= link_to "Back", :back %>
</div>
