<% if participant&.avatar&.attached? %>
  <%=link_to (image_tag (participant.avatar),
                            class: "avatar"),
                            "/profiles/#{participant.profile}" %>
<% else %>
  <%= link_to (image_tag "guestavatar1.png",
                           class: "avatar"),
                           "/profiles/#{participant.profile}"%>
<% end %>
