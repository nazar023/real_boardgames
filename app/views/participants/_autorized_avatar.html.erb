<% if user&.avatar&.attached? %>
  <%=link_to (image_tag (user.avatar),
                            class: "avatar"),
                            "/id/#{user.id}" %>
<% else %>
  <%= link_to (image_tag "guestavatar1.png",
                           class: "avatar"),
                           "/id/#{user.id}"%>
<% end %>
