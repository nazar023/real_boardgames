<div>
  <% participants.each do |participant|%>
  <div>
    <% if game.creator.number == participant.number%>
      <%= image_tag "crown.png", style: "display: height:30px;
                                                  width: 30px;"%>
    <% end %>

    <% if participant.profile.present?%>
      <%= render "participants/autorized_avatar", participant: participant %>
    <% else %>
      <%= render "participants/guest_avatar" %>
    <% end %>
    <%= participant.name%> - <%= participant.number%>
  </div>
  <% end %>
</div>
