
<div class = 'hidden md:flex mx-auto max-w-6xl items-center justify-between p-6 px-8 bg-black bg-opacity-40'>
  <div class = 'flex-wrap columns-2 justify-between px-10 gap-5'>

    <div id = '' class = 'flex flex-wrap '>
      <%= form_with model: @user, url: sessions_path, class: 'space-y-6 pt-8' do |f| %>
      <div class = ''>Welcome!</div>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password %>
        </div>

        <div class="action" >
          <%= f.submit "Sign in", class: "transition-all ease-in-out bg-green-400 hover:bg-green-500 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2" %>
        </div>
      <% end %>
    </div>

    <div class = 'space-y-2'>
      <div class = ' text-center'> Become one of the greatest warriors! </div>
      <%= image_tag('mighty-warriors.gif', class: 'h-80 ')%>
    </div>

  </div>
</div>

  <%# Mobile version start %>
  <div class = "md:hidden lg:hidden">
    <div class = " text-2xl text-center mx-24 mt-20">Sign in</div>
    <%= form_with model: @user, url: sessions_path, class: 'flex flex-col gap-6 py-8 items-center rounded-2xl' do |f| %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: "autofill:bg-yellow-100"%>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, class: "autofill:bg-yellow-100" %>
        </div>

        <div class="action" >
          <%= f.submit "Sign in", class: "transition-all ease-in-out bg-green-400 hover:bg-green-500 font-medium rounded-lg text-sm text-center w-60 py-2" %>
        </div>
      <% end %>
    </div>
  </div>
  <%# Mobile version end %>


