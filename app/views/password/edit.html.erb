 <%= form_with model: current_user, url: password_path(current_user), class: 'space-y-4 m-auto' do |f| %>

  <% if f.object.errors.any? %>
    <% f.object.errors.full_messages.each do |message| %>
    <div> <%= message%> </div>
    <% end %>
  <% end %>
  <h2><%= f.label "Updating password"%></h2>

  <div class="field">
    <%= f.label :password_challange, "Current password" %><br />
    <%= f.password_field :password_challenge %>
  </div>

  <div class="field">
    <%= f.label :password, "New password" %> <br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div>
    <%= f.submit "Update", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" %>
  </div>

<% end %>
