<%= form_with model: @user, url: password_reset_path, class: 'space-y-6 pt-8' do |f| %>
  <div class = ''>Reset password</div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="action" >
    <%= f.submit "Reset", class: "transition-all ease-in-out bg-green-400 hover:bg-green-500 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2" %>
  </div>
<% end %>
